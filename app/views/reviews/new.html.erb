<% provide(:title, 'Review') %>
  <%= form_for @review do |f| %>
  <%= render '/shared/error_messages', object: f.object %>
  <%= f.hidden_field :user_id, value:  current_user.id %>
  <%= f.hidden_field :product_id, value: @review.product_id%>
  
  <div class="review-form">  
    <div class="field">
      <%= f.label :rank,'5段階評価をつけてください(最高評価=5, 最低評価=1)', class: 'review-label' %>
      <%= f.number_field :rank, min:1,max:5 ,prompt: 1, class: 'review-rank count'%>
    </div>
    
    <div class="field">
      <%= f.label :name, '投稿者(ニックネーム)', class: 'review-label' %>
      <%= f.text_field :name, class: 'review-input', placeholder: "こちらは公開されます(ニックネーム推奨)" %>
    </div>
    
    <div class="field">
      <%= f.label :title, 'レビュータイトル(50文字以内)', class: 'review-label' %>
      <%= f.text_field :title, size: 40, class: 'review-input', placeholder: "もっとも伝えたいポイントは何ですか?"  %>
    </div>
    
    <div class="field">
      <%= f.label :description, 'レビュー本文(300文字以内)', class: 'review-label' %>
      <%= f.text_area :description, placeholder: "気に入った点・気に入らなかった点など" %>
    </div>

    <div class="field">
      <%= f.submit "投稿する", class: 'btn btn-large btn-primary' %>
    </div>
  <%end%>
</div>

 