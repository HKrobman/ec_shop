<% provide(:title, 'Review') %>
<div class="review_form">
    <h1>商品レビュー</h1>
    <%= form_for(@review) do |f| %>
    <div class="field">
      <%= f.label :name, '投稿者' %><br />
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label :title, 'タイトル' %><br />
      <%= f.text_field :title %>
    </div>
    
    <div class="field ">
      <%= f.label :description, 'レビュー本文' %><br />
      <%= f.text_area :description %>
    </div>
    
    <div class="field">
      <%= f.submit "投稿する", class: "btn btn-large btn-primary" %>
    </div>
      
    <% end %>
</div>