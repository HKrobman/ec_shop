<div class="mypage-info">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :name_kana, '氏名(カナ)' ,class: "control-label" %>
    <%= f.text_field :name_kana, autofocus: true,  class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :name_kanji, '氏名(漢字)' ,class: "control-label" %>
    <%= f.text_field :name_kanji, autofocus: true, size: 40 , class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :telphone, '電話番号' ,class: "control-label" %>
    <%= f.text_field :telphone, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :zip_code, '郵便番号' ,class: "control-label" %>
    <%= f.text_field :zip_code, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :prefecture, '都道府県' ,class: "control-label" %>
    <%= f.text_field :prefecture, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address1, '住所(丁目番地)' ,class: "control-label" %>
    <%= f.text_field :address1, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :address2, '建物名・部屋番号(マンション名など)' ,class: "control-label" %>
    <%= f.text_field :address2, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
 
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="field">
    <%= f.label :password, 'パスワード(6文字以上)' ,class: "control-label" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation, 'パスワード(確認)'%>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
  
  
  <div class="field">
    <%= f.label :current_password,'現在のパスワード',class: "control-label" %> <br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field field-center">
    <%= f.submit "保存", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

</div>