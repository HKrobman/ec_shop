<div class = "order-index">
<div class = "">
<%@orders.each do |order|%>
  <div class="order-display">
  <div class="m-topi">注文日<%=order.created_at.strftime('%Y/%m/%d')%></div>
  <table align = "center">
  <%order.cart_items.each do |item|%>
  <tr>
    <td><%= image_tag(item.product.image_url.to_s, :class => "order-image-tag")%></td>
    <td><%= item.product.name %></td>
    <td><%= item.product.sale_price.to_s(:delimited) %>円</td>
    <td><span class="post-review"><%= link_to "レビューを投稿する", new_review_path(product_id: item.product.id), :class => "review_post"%></span></td>
  </tr>
  <%end%>
  </table>
  <div class="m-topi">
    <div>合計金額：<%= order.total_price.to_s(:delimited) %>円</div>
    <div>決済方法:<%= order.pay_type %></div>
  </div>
  </div>
<%end%>
</div>
  <div class="page">
      <%= paginate @orders %>
   </div>
</div>