<% provide(:title, 'Order_new') %>
<%= form_for @order, url:{action: 'confirm'} do |f| %>
  <%= render '/shared/error_messages', object: f.object %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class = 'mypage-info'>
  <p class='send-p'>お届け先住所</p>
  <div class='field'>
    <%= f.label :addressee_name_kana, '氏名(カナ)' ,class: 'control-label' %>
    <%= f.text_field :addressee_name_kana,  class: 'form-control' %>
  </div>
  
  <div class='field'>
    <%= f.label :addressee_name_kanji, '氏名(漢字)' ,class: 'control-label' %>
    <%= f.text_field :addressee_name_kanji,  class: 'form-control' %>
  </div>
  
  
  <div class='field'>
    <%= f.label :order_telphone, '電話番号(ハイフン不要)' ,class: 'control-label' %>
    <%= f.text_field :order_telphone,  class: 'form-control' %>
  </div>
  
  <form>
  <div class='field'>
    <%= f.label :addressee_zip_code, '郵便番号(半角&ハイフン不要)' ,class: 'control-label' %>
    <%= f.text_field :addressee_zip_code,  class: 'form-control'%>
  </div>
  
  <div class='field'>
    <%= f.label :addressee_prefecture, '都道府県' ,class: 'control-label' %>
    <%= f.text_field :addressee_prefecture, class: 'form-control' %>
  </div>
  
  <div class='field'>
    <%= f.label :addressee_city, '市区町村' ,class: 'control-label' %>
    <%= f.text_field :addressee_city,  class: 'form-control' %>
  </div>
  
  <div class='field'>
    <%= f.label :addressee_address1, '住所(丁目番地)' ,class: 'control-label' %>
    <%= f.text_field :addressee_address1,  class: 'form-control' %>
  </div>
  
  <div class='field'>
    <%= f.label :addressee_address2, '建物名・部屋番号(マンション名など)' ,class: 'control-label' %>
    <%= f.text_field :addressee_address2,  class: 'form-control', placeholder: '◯○○マンション○○○号室' %>
  </div>

  <div class='pay-type'>
    <%= f.select :pay_type, Order::PAY_TYPE,  prompt: "お支払い方法を選択して下さい", class: 'pay-type' %>
  </div>
  
  <div class='field field-center'>
    <%= f.submit "次へ", class: 'btn btn-large btn-primary' %>
  </div>
  </form>
<% end %>
</div>

<script>
$(window).ready( function()
  {
    $("#order_addressee_zip_code").jpostal({
　　postcode : [ "#order_addressee_zip_code" ],
　　address : {
　　　　　　　"#order_addressee_prefecture" : "%3",
　　　　　　　"#order_addressee_city" : "%4%5",
　　　　　　　}
　})
  });

$( document ).ready( function()
  {
	$.fn.autoKana( "#order_addressee_name_kanji", "#order_addressee_name_kana", {
		katakana : true
	});
 
});

</script>